<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicTacToe.App">
    <Application.Resources>
        <ResourceDictionary>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="#FAFAFA" />
                <Setter Property="BackgroundColor" Value="#03A9F4" />
                <Setter Property="CornerRadius" Value="6" />
            </Style>

            <Style TargetType="Page" ApplyToDerivedTypes="True">
                <Setter Property="BackgroundColor" Value="#FAFAFA" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#212121" />
                <Setter Property="FontSize" Value="12" />
            </Style>

            <Style x:Key="FancyFontLabelStyle" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>